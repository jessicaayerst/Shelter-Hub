@model ShelterHub.Models.ViewModels.CreateClientGroupViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ClientGroup</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h2>@ViewBag.GroupId</h2>
            <input type="hidden" asp-for="ClientGroup.GroupId" />

            <div class="form-group">
                <label asp-for="ClientGroup.ClientId" class="control-label"></label>
                <select asp-for="ClientGroup.ClientId" class="form-control" asp-items="@Model.ClientNameOptions"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Groups" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
