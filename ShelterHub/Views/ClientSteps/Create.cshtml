@model ShelterHub.Models.ViewModels.CreateClientStepViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ClientStep</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h2>@ViewBag.StepId</h2>
            <input type="hidden" asp-for="ClientStep.StepId" />

            <div class="form-group">
                <label asp-for="ClientStep.ClientId" class="control-label">Client Name</label>
                <select asp-for="ClientStep.ClientId" class="form-control" asp-items="@Model.ClientNameOptions"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClientStep.DateStarted" class="control-label"></label>
                <input asp-for="ClientStep.DateStarted" class="form-control" />
                <span asp-validation-for="ClientStep.DateStarted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientStep.DateCompleted" class="control-label"></label>
                <input asp-for="ClientStep.DateCompleted" class="form-control" />
                <span asp-validation-for="ClientStep.DateCompleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Steps" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
