@model ShelterHub.Models.ClientStep

@{
    ViewData["Title"] = "Edit";
}
@* This is where the user can add a date of completion, showing that the client has completed the step. The client's name and the name of the step are listed at the top as a heading. The only thing that can be changed is the date of completion.*@
<h1>Edit Step Details</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <h2>@ViewBag.ClientId</h2>
            <h2>@ViewBag.StepId</h2>
            <h5>Date Started: @ViewBag.DateStarted</h5>
            <input type="hidden" asp-for="ClientId" />
            <input type="hidden" asp-for="StepId" />
            <input type="hidden" asp-for="DateStarted" />
           
            <div class="form-group">
                <label asp-for="DateCompleted" class="control-label"></label>
                <input asp-for="DateCompleted" class="form-control" />
                <span asp-validation-for="DateCompleted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Clients" asp-route-id="@Model.ClientId" asp-action="Details">Back to Client</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
