        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IntakeComplete)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IntakeComplete)
        </dd>
