        </dd>
    </dl>
</div>
<br />
<div>
    <dt class="col-sm-2">Current Steps</dt>
    |
    <a asp-controller="Steps" asp-action="Index">Add A Step</a> |

    @foreach (var ClientStep in Model.ClientSteps)
    {
        <dt class="col-sm-10">
            @Html.DisplayFor(modelItem => ClientStep.Step.StepName)
        </dt>


        <a asp-controller="ClientSteps" asp-route-id="@ClientStep.Id" asp-action="Edit">Edit</a>

    }
</div>
<br />
<div>
    <dt class="col-sm-2">Current Groups</dt>
    @foreach (var ClientGroup in Model.ClientGroups)
    {
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => ClientGroup.Group.GroupName)
        </dd>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
