@model ShelterHub.Models.Step

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Step</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Step Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StepName)
        </dd>
        <dt class = "col-sm-2">
