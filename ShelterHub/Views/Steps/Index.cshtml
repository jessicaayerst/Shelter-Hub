                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                        <a asp-controller="ClientSteps" asp-action="Create" asp-route-id="@item.Id">Add Step To Client</a>
                    </td>
                </tr>
            }
        }
    </tbody>
    <br />
    <br />
    <thead>
        <tr>
            <th>
                Documentation 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.StepTypeId == 3)
            {
                <tr scope="row">
                    <td>
                        @Html.DisplayFor(modelItem => item.StepName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                        <a asp-controller="ClientSteps" asp-action="Create" asp-route-id="@item.Id">Add Step To Client</a>
                    </td>
                </tr>
            }
        }
    </tbody>
    <br />
    <br />
    <thead>
        <tr>
            <th>
                Other 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.StepTypeId == 4)
            {
                <tr scope="row">
                    <td>
                        @Html.DisplayFor(modelItem => item.StepName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                        <a asp-controller="ClientSteps" asp-action="Create" asp-route-id="@item.Id">Add Step To Client</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
